[colors]
background = #df151515
# ef1d1f21
foreground = #a4abb3
# 707880
line = #f00
border = #ef272727
accent = #c2bf616a
selected = #cc6666

[global/wm]
margin-top = 0
margin-bottom = 20

[bar/top]
font-0 = "Overpass Mono:pixelsize=11#2.25"
font-1 = "siji:pixelsize=10#1"

monitor = ${env:MONITOR}

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

fixed-center = true
override-redirect = false
